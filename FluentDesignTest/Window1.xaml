<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test"
        xmlns:fd="clr-namespace:CycWpfLibrary.FluentDesign;assembly=CycWpfLibrary.FluentDesign"
        xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
        x:Class="Test.Window1"
        mc:Ignorable="d"
        Title="Window1"
        Height="200"
        Width="200">
  <Grid fd:PointerTracker.Enabled="True"
        fd:PointerTracker.TrackerSize="0"
        Background="Transparent">
    <Path Data="M 6 12 L 6 3 L 10 6 M 6 12 L 6 3 L 2 6 M 2 .5 L 10 .5 M 2 2 L 10 2"
          Width="12"
          Height="12"
          Stroke="Black"
          StrokeThickness="1"
          StrokeLineJoin="Round"
          UseLayoutRounding="True"
          VerticalAlignment="Center"
          HorizontalAlignment="Center"
          RenderTransformOrigin="0.5,0.5">
      <Path.RenderTransform>
        <RotateTransform Angle="180" />
      </Path.RenderTransform>
    </Path>
  </Grid>

</Window>
